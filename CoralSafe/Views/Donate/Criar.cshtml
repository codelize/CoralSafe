@{
}
<div class="container mt-5">
    <h2>Faça sua Doação com Atenção!</h2>
    <form asp-controller="Donate" asp-action="Criar" method="post">
        <input type="hidden" asp-for="idUserDonate" value="@ViewBag.UserId" />

        <div class="form-group">
            <label for="Valor">Valor Doado (R$):</label>
            <input type="number" asp-for="Valor" class="form-control" required min="0.01" step="0.01" />
        </div>
        <button type="submit" class="btn btn-primary">Enviar Doação</button>
    </form>
</div>
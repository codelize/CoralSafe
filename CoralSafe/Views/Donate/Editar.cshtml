<div class="container mt-5">
    <h2>Editar Doação</h2>
    <form asp-controller="Donate" asp-action="Editar" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="idUserDonate" /> 

        <div class="form-group">
            <label>Valor Doado (R$):</label>
            <input type="number" asp-for="Valor" class="form-control" min="0.01" step="0.01" required />
        </div>

        <div class="form-group">
            <label>Data da Doação:</label>
            <input type="date" asp-for="DataDonate" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    </form>
</div>